{
  "name": "otak-restart",
  "displayName": "otak-restart",
  "description": "Quick restart operations for Extension Host and VSCode window via status bar tooltip.",
  "publisher": "odangoo",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-restart"
  },
  "bugs": {
    "url": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-restart/issues"
  },
  "homepage": "https://github.com/tsuyoshi-otake-system-exe-jp/otak-restart#readme",
  "version": "1.0.4",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "restart",
    "extension host",
    "reload",
    "development",
    "debug"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "otak-restart.restartExtensionHost",
        "title": "Restart Extension Host",
        "category": "Extension Host"
      },
      {
        "command": "otak-restart.reloadWindow",
        "title": "Reload Window",
        "category": "Extension Host"
      }
    ],
    "configuration": {
      "title": "Extension Host Restart",
      "properties": {
        "otakRestart.buttonPosition": {
          "type": "string",
          "default": "right",
          "enum": ["left", "right"],
          "description": "Position of the button in the status bar"
        },
        "otakRestart.buttonText": {
          "type": "string",
          "default": "$(sync) Restart",
          "description": "Text to display on the button (including VSCode icons)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
